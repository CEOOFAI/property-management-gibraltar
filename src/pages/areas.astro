---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEOHead from '../components/SEOHead.astro';
import { generateBreadcrumbLD } from '../lib/seo';
const breadcrumbs = generateBreadcrumbLD([{ name: 'Home', url: 'https://propertymanagementgibraltar.com' }, { name: 'Areas', url: 'https://propertymanagementgibraltar.com/areas' }]);

const areas = [
  { name: 'Town Centre / Main Street', avgRent: '£1,200 – £2,500', yield: '4.5–6%', desc: 'The heart of Gibraltar. Walking distance to everything. High demand from young professionals and iGaming workers. Steady rental income with low void periods.', type: 'Apartments' },
  { name: 'Ocean Village', avgRent: '£1,800 – £3,500', yield: '4–5.5%', desc: 'Premium waterfront living with marina views. Attracts corporate tenants and high earners. Higher rents but slightly longer void periods between tenancies.', type: 'Apartments, Penthouses' },
  { name: 'Europort', avgRent: '£1,500 – £2,800', yield: '4.5–5.5%', desc: 'Modern business district with newer builds. Popular with finance and iGaming professionals. Good-quality stock that requires less maintenance.', type: 'Apartments' },
  { name: 'South District', avgRent: '£1,400 – £3,000', yield: '4–5%', desc: 'Residential and quieter, popular with families. Larger properties available. Longer tenancies and more stable rental income.', type: 'Apartments, Houses' },
  { name: 'Westside', avgRent: '£1,000 – £2,000', yield: '5–7%', desc: 'More affordable area with strong yield potential. Mix of older and newer properties. Higher demand from budget-conscious workers.', type: 'Apartments' },
  { name: 'Catalan Bay', avgRent: '£1,500 – £2,800', yield: '4–5%', desc: 'Charming seaside village on the east side. Unique character attracts premium tenants. Limited stock means low void rates.', type: 'Apartments, Townhouses' },
  { name: 'Mid-Town / Upper Town', avgRent: '£1,100 – £2,200', yield: '5–6.5%', desc: 'Established residential areas with a mix of property types. Reliable rental demand from local workers and families.', type: 'Apartments, Houses' },
];
---
<BaseLayout>
  <SEOHead slot="head" title="Gibraltar Areas — Rental Yields & Property Management"
    description="Property management across all Gibraltar areas. Rental yield data, average rents, and area guides for landlords and investors. Town Centre, Ocean Village, Europort and more."
    structuredData={breadcrumbs} />
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <nav class="text-sm text-stone-500 mb-6"><a href="/" class="hover:text-emerald-700">Home</a><span class="mx-2">›</span><span class="text-stone-800">Areas</span></nav>
    <div class="max-w-3xl mb-12">
      <h1 class="text-3xl sm:text-4xl font-heading font-bold">Areas We <span class="gradient-text">Cover</span></h1>
      <p class="text-stone-500 mt-4 leading-relaxed">We manage properties across every area of Gibraltar. Here's an overview of each area's rental market to help you understand your investment potential.</p>
    </div>
    <div class="space-y-4">
      {areas.map((a) => (
        <div class="card">
          <div class="flex flex-col lg:flex-row lg:items-center gap-4">
            <div class="flex-1">
              <h2 class="font-heading font-bold text-xl text-stone-900">{a.name}</h2>
              <p class="text-stone-500 text-sm mt-2 leading-relaxed">{a.desc}</p>
            </div>
            <div class="flex gap-4 shrink-0">
              <div class="text-center px-4 py-3 bg-stone-50 rounded-lg">
                <div class="font-heading font-bold text-emerald-700">{a.avgRent}</div>
                <div class="text-xs text-stone-400 mt-0.5">Avg. monthly rent</div>
              </div>
              <div class="text-center px-4 py-3 bg-amber-50 rounded-lg">
                <div class="font-heading font-bold text-amber-700">{a.yield}</div>
                <div class="text-xs text-stone-400 mt-0.5">Gross yield</div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    <div class="mt-12 p-4 rounded-lg bg-stone-100 text-stone-500 text-xs">
      <strong class="text-stone-700">Disclaimer:</strong> Rental yields and average rents are indicative based on market data. Actual returns depend on property condition, exact location, and market conditions. Last updated February 2026.
    </div>
  </section>
</BaseLayout>
