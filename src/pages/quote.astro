---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEOHead from '../components/SEOHead.astro';
import QuoteCalculator from '../components/QuoteCalculator.tsx';
import { generateBreadcrumbLD } from '../lib/seo';
const breadcrumbs = generateBreadcrumbLD([{ name: 'Home', url: 'https://propertymanagementgibraltar.com' }, { name: 'Get a Quote', url: 'https://propertymanagementgibraltar.com/quote' }]);
const supabaseUrl = import.meta.env.SUPABASE_URL || 'https://bfxroxboykuivgckmebw.supabase.co';
const supabaseKey = import.meta.env.SUPABASE_ANON_KEY || '';
---
<BaseLayout>
  <SEOHead slot="head" title="Get a Free Property Management Quote — Gibraltar"
    description="Get a free, no-obligation property management quote in under 2 minutes. Tell us about your property and we'll come back with a tailored proposal."
    structuredData={breadcrumbs} />
  <section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <nav class="text-sm text-stone-500 mb-6"><a href="/" class="hover:text-emerald-700">Home</a><span class="mx-2">›</span><span class="text-stone-800">Get a Quote</span></nav>
    <div class="text-center mb-10">
      <h1 class="text-3xl sm:text-4xl font-heading font-bold">Get Your <span class="gradient-text-gold">Free Quote</span></h1>
      <p class="text-stone-500 mt-3">Takes under 2 minutes. No obligation, no hard sell.</p>
    </div>
    <div class="card !p-8">
      <QuoteCalculator client:load supabaseUrl={supabaseUrl} supabaseKey={supabaseKey} />
    </div>
    <div class="mt-8 flex justify-center gap-6 text-sm text-stone-400">
      <span class="flex items-center gap-1.5"><svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/></svg> Free & no obligation</span>
      <span class="flex items-center gap-1.5"><svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/></svg> Response within 24h</span>
    </div>
  </section>
</BaseLayout>
